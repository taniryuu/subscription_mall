<% provide(:title, "個人店舗サブスクページ作成") %>

<h1>個人店舗サブスクショップ開設</h1>

<%= form_with(model: @private_store, url: owner_private_stores_path(@private_store, owner_id: @owner.id), multipart: true, local: true) do |form| %>
  <%= render 'shared/error_messages' , object: @private_store %>

  <%= form.hidden_field :owner_id, :value => @owner.id %>

  <div class="field">
    <%= form.label :お店の名前 %> <span class="must">必須</span><br/>
    <%= form.text_field :name, id: :private_store_name, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :お店の住所 %> <span class="must">必須</span>
    <%= form.text_field :address, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :お店紹介 %> <span class="must">必須</span><br/>
    <%= form.text_field :shop_introduction, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :サブスク料理名 %> <span class="must">必須</span><br/>
    <%= form.text_field :title, id: :private_store_title, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :商品説明 %> <span class="must">必須</span><br/>
    <%= form.text_area :detail, id: :private_store_detail, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :お店トップ紹介写真 %> <span class="must">必須</span><br/>
    <%= form.file_field :image_private_store, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :"LINE@QRコード画像",for: "file-input", type:"file" %> <span class="must">必須</span><br/>
    <%= form.file_field :qr_image, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :店舗情報 %> <span class="must">必須</span><br/>
    <%= form.text_area :private_store_detail, id: :private_store_private_store_detail, placeholder: "例)", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真2, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image2, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真3, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image3, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真4, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image4, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真5, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image5, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真6, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image6, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真7, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image7, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真8, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image8, id: "file-input" %>
  </div>

  <div class="field">
    <%= form.label :サブのお店紹介写真9, for: "file-input", type:"file" %><br/>
    <%= form.file_field :sub_image9, id: "file-input"%>
  </div>

  <div class="field">
    <%= form.label :カテゴリ %> <span class="must">必須</span><br/>
    <%= form.collection_select(:category_id, Category.all, :id, :name, include_blank: "カテゴリを選択してください", class: 'form-control') %>
  </div>

  <div class="field">
    <%= form.label :price %> <span class="must">必須</span><br/>
    <%= form.number_field :price, id: :private_store_price, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :商品_ID %> <span class="must">必須</span>
    <%= form.text_field :product_id, class: 'form-control' %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
