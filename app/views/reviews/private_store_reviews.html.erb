
<h1><%= @private_store.name %>のレビュー</h1>

<div class="rating-box">
  <%= form_with(model: Review, url: user_reviews_path(current_user), local: true, method: :post) do |f| %>
   <div class="main-rating">
    <div class="form-outline mb-4">
      <%= f.label :メールアドレス, class: "label-signup" %>
      <%= f.email_field :email, :required => true, value: current_user.email, class: "form-control" %>
    </div>

    <div class="form-outline mb-4">
      <div class="ratings">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
    <div class="rating-value-display"><span id="rating-value-display">0</span>/5</div>
   </div>

      <%= f.hidden_field :private_store_id, value: @private_store.id %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :score, id: "rating-value" %>

    <div class="form-outline mb-4">
      <%= f.label :コメント, class: "label-signup" %>
      <%= f.text_area :content, :required => true, class: "form-control" %>
    </div>
      <%= f.submit "投稿する", class: "btn btn-primary btn-block mb-4" %>
  </div>
 <% end %>
</div>
<%= javascript_include_tag "reviews.js" %>


