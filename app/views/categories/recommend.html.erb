<% provide(:title, "おすすめ店舗") %>
<p id="notice"><%= notice %></p>

<h1>オススメ店舗</h1>


<% @subscriptions.each do |subscription| %>
<div class="container mt-5">
  <section class="dark-grey-text">
    <div class="row align-items-center">
      <div class="col-lg-5 col-xl-3">
        <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
          <% if subscription.image_subscription.present? %>
            <%= image_tag subscription.image_subscription_url, width: '100%', height: "300" %>
          <% else %>
            <p>なし</p>
          <% end %>
        </div>
      </div>
      <div class="col-lg-7 col-xl-8">
        <h4 class="font-weight-bold mb-3"><strong><%= subscription.name %></strong></h4>
        <p class="dark-grey-text"><%= subscription.title %></p>
        <%= link_to "サブスクしてみる", owner_subscription_path(id: subscription.id, owner_id: subscription.owner_id), class: 'btn btn-outline-primary btn-rounded text-primary' %>
      </div>
    </div>
    <hr class="my-3">
  </section>
</div>
<% end%>

<% @private_stores.each do |private_store| %>
<div class="container mt-5">
  <section class="dark-grey-text">
    <div class="row align-items-center">
      <div class="col-lg-5 col-xl-3">
        <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
          <% if private_store.image_private_store.present? %>
            <%= image_tag private_store.image_private_store_url, width: '100%', height: "300" %>
          <% else %>
            <p>なし</p>
          <% end %>
        </div>
      </div>
      <div class="col-lg-7 col-xl-8">
        <h4 class="font-weight-bold mb-3"><strong><%= private_store.name %></strong></h4>
        <p class="dark-grey-text"><%= private_store.title %></p>
        <%= link_to "サブスクしてみる", owner_private_store_path(id: private_store.id, owner_id: private_store.owner_id), class: 'btn btn-outline-primary btn-rounded text-primary' %>
      </div>
    </div>
    <hr class="my-3">
  </section>
</div>
<% end%>
<%= will_paginate(@subscriptions, class: "pagination justify-content-center mt-6 mb-7", renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>

