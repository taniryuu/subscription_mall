<% provide(:title, "カテゴリー") %>

<h1><%= @category.name %></h1>

<hr class="my-3">

<% @categories.category_subscriptions.each do |category_subscription| %>
<div class="container mt-5">
  <section class="dark-grey-text">
    <div class="row align-items-center">
      <div class="col-lg-5 col-xl-3">
        <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
          <% if category_subscription.subscription.image_subscription.present? %>
            <%= image_tag category_subscription.image_subscription_url, width: '100%' %>
          <% else %>
            <p>なし</p>
          <% end %>
        </div>
      </div>
      <div class="col-lg-7 col-xl-8">
        <h4 class="font-weight-bold mb-3"><strong><%= category_subscription.subscription.name %></strong></h4>
        <p class="dark-grey-text"><%= category_subscription.subscription.title %></p>
        <%= link_to "サブスクしてみる", owner_subscription_path(category_subscription.subscription.id, owner_id: @subscription.owner_id), class: 'btn btn-outline-primary btn-rounded text-primary' %>
      </div>
    </div>
    <hr class="my-3">
  </section>
</div>
<% end%>

<br>
<%= link_to 'カテゴリー一覧へ', categories_path %>
