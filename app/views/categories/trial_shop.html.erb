<% provide(:title, "トライアルショップ") %>

<h1>トライアルでも利用できる店舗</h1>

<hr class="my-3">

<% @subscriptions.each do |subscription| %>
  <div class="container mt-5">
    <section class="dark-grey-text">
      <div class="row align-items-center">
        <div class="col-lg-5 col-xl-3">
          <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
            <% if subscription.image_subscription.present? %>
              <%= image_tag subscription.image_subscription_url, width: '100%' %>
            <% else %>
              <p></p>
            <% end %>
          </div>
        </div>
        <div class="col-lg-7 col-xl-8">
        <span class="badge badge-success">加盟店</span>
          <span class="badge badge-warning">トライアル</span>
          <h4 class="font-weight-bold mb-3"><strong><%= subscription.name %></strong></h4>
          <p class="dark-grey-text"><%= subscription.title %></p>
          <%= link_to "詳細", owner_subscription_path(subscription.id, owner_id: subscription.owner_id), class: 'btn btn-outline-primary btn-rounded text-primary' %>
        </div>
      </div>
      <hr class="my-3">
    </section>
  </div>
<% end%>

<% @private_stores.each do |private_store| %>
  <div class="container mt-5">
    <section class="dark-grey-text">
      <div class="row align-items-center">
        <div class="col-lg-5 col-xl-3">
          <div class="view overlay rounded z-depth-1-half mb-lg-0 mb-4">
            <% if private_store.image_private_store.present? %>
              <%= image_tag private_store.image_private_store_url, width: '100%' %>
            <% else %>
              <p></p>
            <% end %>
          </div>
        </div>
        <div class="col-lg-7 col-xl-8">
        <span class="badge badge-primary">個人店舗</span>
          <span class="badge badge-warning">トライアル</span>
          <h4 class="font-weight-bold mb-3"><strong><%= private_store.name %></strong></h4>
          <p class="dark-grey-text"><%= private_store.title %></p>
          <%= link_to "詳細", owner_private_store_path(private_store.id, owner_id: private_store.owner_id), class: 'btn btn-outline-primary btn-rounded text-primary' %>
        </div>
      </div>
      <hr class="my-3">
    </section>
  </div>
<% end%>

<br>
<%= link_to 'トップへ', root_path %>
