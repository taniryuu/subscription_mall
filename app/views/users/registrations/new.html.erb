<% provide(:title, "会員登録") %>
<p id="notice"><%= notice %></p>

<h1 class="new-title index-title-post">新規会員登録</h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3 mx-auto">
    <%= form_for(resource, as: resource_name, url: users_sign_up_confirm_path(resource)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %> <span class="must">必須</span><br/>
        <%= f.text_field :name, :required => true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :email %><span class="must">必須</span><br/>
        <%= f.email_field :email, :required => true, placeholder: "sample@gmail.com", autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :phone_number, class: "form-label" %><span class="must">必須</span><span>＊ハイフンなし</span>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %><span class="must">必須</span>
        <% if @minimum_password_length %>
        <em>(最小<%= @minimum_password_length %>文字)</em>
        <% end %><br/>
        <%= f.password_field :password, :required => true, placeholder: "6文字以上、半角英字と半角数字を使用", autocomplete: "new-password", class: 'form-control' %>
      </div>

      <% if resource.errors.include?(:password) %>
        <p style="color: red;">＊<%= resource.errors.full_messages_for(:password).first %></p>
        <br/>
      <% end %>

      <div class="field">
        <%= f.label :password_confirmation %><span class="must">必須</span><br/>
        <%= f.password_field :password_confirmation, :required => true,autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="actions sinup">
        <%= f.submit "登録", class: "btn btn-primary btn-block btn-login" %>
      </div>
    <% end %>

  </div>
</div>
