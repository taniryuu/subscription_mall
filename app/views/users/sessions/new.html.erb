<% provide(:title, "会員ユーザーログイン") %>

<p id="notice"><%= notice %></p>

<div class="box-owner">
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h1>利用者様</h1>
      <h1>ログイン</h1>
      <div class="box-email">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password %>
          </div>
        </div>
        <%= f.password_field :password, :required => true, autocomplete: "current-password" %>
      <div class="column-right">
        <%= link_to "パスワードを忘れた場合", new_user_password_path %>
      </div>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="box-newusr">
          <p><span>--------------</span> 巡グルメの会員ですか？ <span>----------------</span></p><br>
          <%= link_to "巡グルメ会員登録", new_user_registration_path %>
        </div>
        <div class="legal-text"></br>
          <div class="box-newusr"></br>
            <%= link_to "経営者様はこちらからログイン", new_owner_session_path %>
          </div>
        </div>

    <h2><span>---------</span>SNSアカウントでログイン<span>---------</span></h2>

        <div class="box-facebook"></br>
            <%= link_to('/devise/auth/facebook') do %>
            <i class="fa fa-facebook-official"></i> Facebookでログイン
            <% end %>
        </div>

        <div class="box-line"></br>
            <%= link_to('/devise/auth/line') do %>
            <i class="fa fa-mobile"></i> LINEでログイン
            <% end %>
        </div> 

        <div class="box-twitter"></br>
            <%= link_to('/devise/auth/twitter') do %>
            <i class="fa fa-twitter"></i> Twitterでログイン
            <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
