<% provide(:title, 'All Users') %>

<p id="notice"><%= notice %></p>
<div>
  <h1>アカウント削除履歴</h1>

  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-condensed table-hover" id="table-users">
      <thead>
        <tr>
          <th>ID</th>
          <th>名前</th>
          <th>かな</th>
          <th>アドレス</th>
          <th>電話番号</th>
        </tr>
      </thead>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name ,user_path(user.restore) %></td>
          <td><%= user.kana %></td>
          <td><%= user.email %></td>
          <td><%= user.phone_number %></td>
          <td>
              <%= link_to "復帰", update_deleted_users_user_path(user), method: :patch,
                  data: { confirm: "復帰してよろしいですか？" },
                  class: "btn btn-info" %>
          </td>
          <td>
          </td>
        </tr>
      <% end %>
      <%= link_to "利用者一覧へ", users_path, class: "btn btn-primary" %>
    </table>
  </div>
</div>