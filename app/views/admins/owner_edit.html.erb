<% provide(:title, "Edit") %>

<h1><%= @owner.name %>様情報の編集</h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with(model: @owner, url: owner_update_admin_path(owner_id: @owner), local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: @owner %>
      
      <div class="field mb-3">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :kana, class: "form-label" %>
        <%= f.text_field :kana, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, required: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :phone_number, class: "form-label" %>
        <%= f.text_field :phone_number, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :address, class: "form-label" %>
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, required: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>
  </div>
</div>
