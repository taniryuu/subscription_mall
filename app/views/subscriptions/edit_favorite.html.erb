<% provide(:title, "お気に入り店舗") %>

<h1>お気に入り追加</h1>

<%= form_with(model: @subscription, url: user_update_favorite_path(@subscription, user_id: @user.id), local: true) do |form| %>
  <%= render 'shared/error_messages' , object: @subscription %>

  <%= form.hidden_field :user_id, :value => @user.id %>

  <div class="field">
    <%= form.label :お気に入りチェック %> <span class="must">必須</span><br/>
    <%= form.check_box :favorite, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit  %>
  </div>
<% end %>
<%= link_to 'トップ', root_path %> 
