    <%= form.label :写真, for: "file-input", type:"file" %>
    <%= form.fields_for :images do |image| %>
      <%= image.file_field :image_subscription, multiple: true, name: "images[image_subscription][]" %>
      <%= image.hidden_field :subscription_id, :value => @subscription.id %>
    <% end %>
  </div> 
<%
=end%>

