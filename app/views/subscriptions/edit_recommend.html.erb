<% provide(:title, "おすすめ店舗") %>

<h1>おすすめ店舗枠に表示させる</h1>

<%= form_with(model: @subscription, url: update_recommend_owner_subscription_path(@subscription, owner_id: @owner.id), local: true) do |form| %>
  <%= render 'shared/error_messages' , object: @subscription %>

  <%= form.hidden_field :owner_id, :value => @owner.id %>

  <div class="field">
    <%= form.label :おすすめ %> <span class="must">必須</span><br/>
    <%= form.check_box :recommend, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit "おすすめ店舗に加える" %>
  </div>
<% end %>
<%= link_to 'トップ', root_path %> |

<%= link_to '一覧へ', owner_subscriptions_path %>
