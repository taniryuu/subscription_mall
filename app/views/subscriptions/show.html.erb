                  </figure>
                <% end %>                

                <% if @subscription.sub_image8.to_s.present? %>
                  <figure class="col-md-4">
                    <%= image_tag @subscription.sub_image8.to_s, data: {target: "#carousel", slide_to: "7"}, class: "img-fluid shadow-sm" %>
                  </figure>
