<% provide(:title, "Edit") %>

<h1>経営者様情報の更新</h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with(model: current_owner, local: true) do |f| %>
      <%= render "owners/shared/error_messages", resource: current_owner %>

      <div class="field mb-3">
        <%= f.label :name, class: "form-label" %> <span class="must">必須</span><br/>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :kana, class: "form-label" %>
        <%= f.text_field :kana, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :email, class: "form-label" %> <span class="must">必須</span><br/>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :phone_number, class: "form-label" %> <span>(ハイフンなし)連絡がつきやすい番号でお願いします。</span><span class="must">必須</span><br/>
        <%= f.telephone_field :phone_number, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :payee %> <span class="must">必須</span><br/>
        <%= f.text_field :payee, class: 'form-control' %>
      </div>

      <div class="field mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, required: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, required: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.submit "更新", class: "btn btn-primary btn-block" %>
      </div>

    <% end %>
  </div>
</div>
