<% provide(:title, "サポートお問い合わせフォーム") %>


<%= form_with(model: @suport, url: suports_confirm_path, local: true) do |f| %>
  <div class="page-header">
    <h1>サポートのお問い合わせ</h1>
  </div>

  <% if @suport.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong>入力内容にエラーがあります</strong>
      <ul>
        <% @suport.errors.each do |attr, msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tr>
      <th>名前<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :name, class: 'form_border'%></td>
    </tr>
    <tr>
      <th>メールアドレス<span class="text-danger">（必須）</span></th>
      <td><%= f.text_field :email, class: 'form_border'%></td>
    </tr>
    <tr>
      <th>サポート内容</th>
      <td><%= f.text_area :message, class: 'form_border' %></td>
    </tr>
  </table>
  <%= f.submit '確認', class: 'btn btn-primary' %>
<% end %>
