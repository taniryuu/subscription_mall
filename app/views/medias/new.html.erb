<% provide(:title, "メディア作成") %>
<h1 class="brand-color display-4 mt-6 mb-6">メディア　作成</h1>
<div class="mb-8">
  <%= form_with(model: @media, url: medias_path(@media), local: true) do |form| %>

    <div class="review-coment-new">
      <%= form.label :メディア名, class: "label-signup" %>
      <%= form.text_area :media_name, :required => true, size: "30x2", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :メディア画像, class: "label-signup" %>
      <%= form.file_field :media_image, :required => true %>
    </div>
    <%= form.submit "メディア登録する", class:  "btn btn-primary" %>
  <% end %>

  <%= link_to 'メディアへ', medias_path, class: "btn btn-gradient-radius mt-5" %>
</div>
