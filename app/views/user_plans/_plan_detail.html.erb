<div class="container my-5">
  <section class="text-center dark-grey-text">
    <div class="row">
      <div class="col-lg-4 col-md-12 mb-4">
        <div class="card">
          <div class="card-body subscription-bg">
            <h5 class="mb-4"><%= @confirm_plan.nickname %></h5>
            <div class="d-flex justify-content-center">
              <img
              src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRPf1fl_6GCRJUByMI9OSkIz02ssTC23yXJTQ&usqp=CAU"
              width="120"
              height="120"
            />
            </div>
            <h2 class="font-weight-bold my-4">￥<%= @confirm_plan.amount %>/月</h2>
            <p class="grey-text"><%= @confirm_plan.metadata.detail %></p>
            <% if @payment.present? && @payment.amount_subtotal == @plan.amount_subtotal %>
              <button style="pointer-events: none;" class="btn btn-outline-success btn-rounded waves-effect">すでに購入されています</button>
            <% elsif current_user.customer_id.present? %>
              <%=
                link_to "変更する", user_plan_path(value: @confirm_plan.id),
                method: :patch, data: { confirm: "【確認】プランを変更してしてよろしいでしょうか？" }, class: "btn btn-outline-success btn-rounded waves-effect"
              %>
            <% else %>
              <button type="button" id="user-checkout-button" class="btn btn-outline-success btn-rounded waves-effect">サブスクする</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
