<% provide(:title, "経営者様インタビュー") %>

<p id="notice"><%= notice %></p>

<h1 class="brand-color display-4 mt-6 mb-6">経営者様インタビュー</h1>

<table class="mb-8">
  <tbody>
    <% if @interviews_count < 1 %>
      <h1>まだ投稿されていません</h1>
    <% end %>
    <% @interviews.each do |interview| %>
    <hr class="tool-bar">
      <div class="row">
        <div class="col-lg-3 mb-3">
          <div class="grid-item-image"><%= image_tag interview.image_interview.thumb.url %></div>
        </div>
        <div class="col-lg-2 mb-3">
          <h3><%= interview.owner_name %>様</h3>
        </div>

        <div class="col-lg-2 mb-3">
          <%= interview.shop_name %>
        </div>

        <div class="col-lg-5 mb-3">
          <%= interview.content.truncate(30) %>
        </div>
      </div>
      <% if current_owner.present? or current_admin.present? %>
          <div class="row justify-content-end mt-4 mb-5">
            <div class="col-md-2">
              <%= link_to "詳細", interview_path(interview), class: "btn btn-lg btn-block btn-brand mb-4" %>
            </div>
            <div class="col-md-2">
              <%= link_to "編集", edit_interview_path(interview), class: "btn btn-lg btn-block btn-brand mb-4" %>
            </div>
            <div class="col-md-2">
              <%= link_to "削除", interview_path(interview), method: :delete, class: "btn btn-lg btn-block btn-danger mb-4", data: { confirm: "お店を削除してよろしいですか？" } %>
            </div>
          </div>
      <% end %> 
    <% end %>
    <% if current_owner.present? or current_admin.present? %>
      <%= link_to '経営者様インタビュー作成', new_interview_path, class: "btn-gradient-radius mt-5" %>
    <% end %>
  </tbody>
</table>
<br>

