<% provide(:title, "インタビュー編集") %>

<h1 class="brand-color display-4 mt-6 mb-6">経営者様インタビュー編集</h1>

<%= form_with(model: @interview, url: interview_path, local: true) do |form| %>
  <%= render 'shared/error_messages' , object: @interview %>

  <div class="field">
    <%= form.label :owner_name %>
    <%= form.text_field :owner_name, :required => true, id: :interview_owner_name, placeholder: "例)鈴木　太郎", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :shop_name %>
    <%= form.text_field :shop_name, :required => true, id: :interview_shop_name, placeholder: "例)野郎ラーメン", class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content, :required => true, id: :interview_content, placeholder: "例)美味しいラーメン", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :image_interview %>
    <%= form.file_field :image_interview %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to '詳細', interview_path(@interview), class: "btn btn-gradient-radius mt-5 mb-8" %>
<%= link_to '経営者様インタビュー一覧へ', interviews_path, class: "btn btn-gradient-radius mt-5 mb-8" %>
